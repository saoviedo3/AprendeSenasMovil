<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Home -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.espe.aprendesenasv1.ui.HomeFragment"
        tools:layout="@layout/fragment_home"
        android:label="Inicio"/>

    <!-- Letras -->
    <fragment
        android:id="@+id/lettersFragment"
        android:name="com.espe.aprendesenasv1.ui.LettersFragment"
        android:label="Abecedario"
        tools:layout="@layout/fragment_letters">
        <action
            android:id="@+id/action_letters_to_detection"
            app:destination="@id/detectionFragment" />
        <argument
            android:name="sign"
            app:argType="string" />
    </fragment>

    <!-- Numeros -->
    <fragment
        android:id="@+id/numbersFragment"
        android:name="com.espe.aprendesenasv1.ui.NumbersFragment"
        android:label="Numeros"
        tools:layout="@layout/fragment_numbers">
        <action
            android:id="@+id/action_letters_to_detection"
            app:destination="@id/detectionFragmentNumber" />
        <argument
            android:name="sign"
            app:argType="string" />
    </fragment>

    <!-- Detección -->
    <fragment
        android:id="@+id/detectionFragment"
        android:name="com.espe.aprendesenasv1.ui.DetectionFragment"
        android:label="Detección"
        tools:layout="@layout/fragment_detection">
        <argument
            android:name="sign"
            app:argType="string" />
    </fragment>

    <!-- Detección -->
    <fragment
        android:id="@+id/detectionFragmentNumber"
        android:name="com.espe.aprendesenasv1.ui.DetectionFragmentNumbers"
        android:label="Detección"
        tools:layout="@layout/fragment_detection_number">
        <argument
            android:name="sign"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/conoceMasFragment"
        android:name="com.espe.aprendesenasv1.ui.ConoceMasFragment"
        android:label="Conoce Más"
        tools:layout="@layout/fragment_conoce_mas">
    </fragment>

</navigation>

