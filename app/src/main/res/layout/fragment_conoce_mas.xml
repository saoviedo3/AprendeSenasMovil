<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo: imagen a pantalla completa -->
    <ImageView
        android:id="@+id/bgImageInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_home"
        android:scaleType="centerCrop" />

    <!-- Scrim para legibilidad (opcional) -->
    <View
        android:id="@+id/darkOverlayInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lengua de Señas: Un puente de comunicación"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="16dp"
                android:textSize="24sp"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="18sp"
                app:autoSizeMaxTextSize="24sp"
                app:autoSizeStepGranularity="1sp"
                tools:ignore="SmallSp" />

        <!-- ===== Sección 1 ===== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="#22FFFFFF"
            app:cardBackgroundColor="#111111">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvContent1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Pérdida de audición en el mundo, América y Ecuador"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:includeFontPadding="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivImage1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imagen1"
                    android:contentDescription="Mapa de pérdida de audición"
                    app:layout_constraintTop_toBottomOf="@id/tvContent1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="16:9"
                    app:shapeAppearanceOverlay="@style/Shape.RoundImage"
                    app:strokeColor="#22FFFFFF"
                    app:strokeWidth="1dp"/>

                <TextView
                    android:id="@+id/tvContent2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Actualmente, más de 1.500 millones de personas sufren pérdida auditiva. Se estima que alrededor de 430 millones a nivel mundial tienen pérdida moderada o mayor en el oído con mejor audición. En Ecuador, según el CONADIS, hay 487.542 personas con alguna discapacidad; de este total, el 62,78% corresponde a discapacidad auditiva."
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:lineSpacingExtra="2dp"
                    app:layout_constraintTop_toBottomOf="@id/ivImage1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_goneMarginTop="8dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ===== Sección 2 ===== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="#22FFFFFF"
            app:cardBackgroundColor="#111111">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvContent3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Pérdida de audición"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:includeFontPadding="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivImage2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imagen2"
                    android:contentDescription="Ilustración sobre pérdida de audición"
                    app:layout_constraintTop_toBottomOf="@id/tvContent3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="16:9"
                    app:shapeAppearanceOverlay="@style/Shape.RoundImage"
                    app:strokeColor="#22FFFFFF"
                    app:strokeWidth="1dp"/>

                <TextView
                    android:id="@+id/tvContent4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="La pérdida de audición aparece cuando una persona no puede oír como alguien con audición normal. Las causas pueden ser congénitas, hereditarias o genéticas, y puede afectar uno o ambos oídos."
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:lineSpacingExtra="2dp"
                    app:layout_constraintTop_toBottomOf="@id/ivImage2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ===== Sección 3 ===== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="#22FFFFFF"
            app:cardBackgroundColor="#111111">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvContent5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Lengua de Señas Ecuatoriana (LSEC)"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivImage3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imagen3"
                    android:contentDescription="Imagen relacionada con LSEC"
                    app:layout_constraintTop_toBottomOf="@id/tvContent5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="16:9"
                    app:shapeAppearanceOverlay="@style/Shape.RoundImage"
                    app:strokeColor="#22FFFFFF"
                    app:strokeWidth="1dp"/>

                <TextView
                    android:id="@+id/tvContent6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="La lengua de señas en Ecuador se conoce como LSEC. En 1986 se fundó FENASEC y en 2012 se publicó el Diccionario Oficial de LSEC."
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:lineSpacingExtra="2dp"
                    app:layout_constraintTop_toBottomOf="@id/ivImage3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ===== Sección 4 ===== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="#22FFFFFF"
            app:cardBackgroundColor="#111111">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvContent7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Comunicación y empleo"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivImage4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imagen4"
                    android:contentDescription="Ilustración sobre comunicación y empleo"
                    app:layout_constraintTop_toBottomOf="@id/tvContent7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="16:9"
                    app:shapeAppearanceOverlay="@style/Shape.RoundImage"
                    app:strokeColor="#22FFFFFF"
                    app:strokeWidth="1dp"/>

                <TextView
                    android:id="@+id/tvContent8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="El principal reto es comunicarse con personas que no usan lengua de señas. Además, solo ~16% de la población sorda en Ecuador tiene empleo."
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:lineSpacingExtra="2dp"
                    app:layout_constraintTop_toBottomOf="@id/ivImage4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
    </FrameLayout>
